.container
  %h1 Sign Up
  .row
    .col-md-6.col-md-offset-3

      = form_for @user do |f|
        
        = render partial: 'shared/error_messages', locals: { object: @user }

        = f.label :name
        = f.text_field :name

        = f.label :email
        = f.email_field :email

        = f.label :organization_join_code, "Organization Code"
        = f.text_field :organization_join_code

        = f.label :password
        = f.password_field :password

        = f.label :password_confirmation
        = f.password_field :password_confirmation

        = f.submit "Sign up"