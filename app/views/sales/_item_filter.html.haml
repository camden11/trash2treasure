.panel-group  
  .item-filter.panel.panel-default
    %a.panel-heading-link{ href: "#item-categories-body", data: { toggle: "collapse" } }
      .panel-heading
        Filter...
    #item-categories-body.panel-collapse.collapse
      %form.item-categories.panel-body
        - item_categories.each do |category|
          .checkbox.text-left
            %label
              %input.item-category{type: "checkbox", data: { category: "#{category}"} }="#{category}"
      .panel-footer#clear-filter
        Clear


